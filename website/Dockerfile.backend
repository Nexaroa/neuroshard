FROM python:3.10-slim

WORKDIR /app

# Install system dependencies for bcrypt
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy and install API requirements
COPY website/requirements_api.txt .
RUN pip install --no-cache-dir -r requirements_api.txt
RUN pip install psycopg2-binary bcrypt

# Copy the neuroshard package (context is project root, new src/ layout)
COPY src/neuroshard ./neuroshard
COPY src/protos ./protos

# Install neuroshard package dependencies (CPU-only)
RUN pip install --no-cache-dir torch torchvision --index-url https://download.pytorch.org/whl/cpu
RUN pip install tiktoken transformers cryptography grpcio grpcio-tools

# Copy API code
COPY website/api ./api

# Copy protected files (whitepaper, etc.)
COPY website/protected ./protected

# Environment variables for DB connection
ENV DATABASE_URL=postgresql://user:password@db:5432/neuroshard
ENV PYTHONPATH=/app

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]

